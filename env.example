# Chess Position Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Key (required for image recognition and AI explanations)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Stockfish path (optional - auto-detected on most systems)
# Uncomment and set if Stockfish is in a non-standard location
# STOCKFISH_PATH=/usr/local/bin/stockfish

# Server configuration
PORT=8080
DEBUG=false

